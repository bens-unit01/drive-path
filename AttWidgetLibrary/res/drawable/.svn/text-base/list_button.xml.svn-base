<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true" android:state_enabled="false" android:drawable="@drawable/list_disabled_focus" />
	<item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/list_enabled_focus" />
	
	<item android:state_enabled="false" android:drawable="@drawable/list_disabled" /> <!-- disabled -->
	<item android:state_pressed="true" android:drawable="@drawable/list_pressed" /> <!-- pressed -->
	<item android:drawable="@drawable/list_enabled" /> <!-- default -->
</selector>