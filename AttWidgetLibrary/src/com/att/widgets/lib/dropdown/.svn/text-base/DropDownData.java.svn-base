package com.att.widgets.lib.dropdown;

/**
 * Is a pair of value and text, that
 * it's used in the {@link DropDown}
 */
public class DropDownData {
	private int value;
	private String text;
	
	/**
	 * Creates a DropDownData. This object is used with the DropDown Widget, in fact is the content
	 * inside the DropDownData.
	 * @param text
	 * @param value
	 */
	public DropDownData(String text, int value){
		this.text = text;
		this.value = value;
	}

	/**
	 * Gets the value.
	 * @return
	 */
	public int getValue() {
		return value;
	}

	/**
	 * Sets the Value.
	 * @param value
	 */
	public void setValue(int value) {
		this.value = value;
	}

	/**
	 * Gets the text
	 * @return
	 */
	public String getText() {
		return text;
	}

	/**
	 * Sets the text.
	 * @param text
	 */
	public void setText(String text) {
		this.text = text;
	}
	
}
